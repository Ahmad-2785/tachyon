load(
    "//bazel:tachyon_cc.bzl",
    "tachyon_cc_benchmark",
    "tachyon_cc_library",
    "tachyon_cc_test",
)

package(default_visibility = ["//visibility:public"])

tachyon_cc_library(
    name = "pippenger",
    hdrs = ["pippenger.h"],
    deps = [
        ":pippenger_base",
        ":pippenger_util",
        "//tachyon/base:openmp_util",
        "//tachyon/base/containers:adapters",
        "//tachyon/math/elliptic_curves/msm:msm_util",
        "@com_google_absl//absl/types:span",
    ],
)

tachyon_cc_library(
    name = "pippenger_adapter",
    hdrs = ["pippenger_adapter.h"],
    deps = [":pippenger"],
)

tachyon_cc_library(
    name = "pippenger_base",
    hdrs = ["pippenger_base.h"],
    deps = ["//tachyon/math/base:semigroups"],
)

tachyon_cc_library(
    name = "pippenger_gpu",
    hdrs = ["pippenger_gpu.h"],
    deps = [
        ":pippenger_base",
        "//tachyon/math/elliptic_curves:points",
    ],
)

tachyon_cc_library(
    name = "pippenger_util",
    hdrs = ["pippenger_util.h"],
)

tachyon_cc_test(
    name = "algorithms_unittests",
    srcs = [
        "pippenger_adapter_unittest.cc",
        "pippenger_unittest.cc",
    ],
    deps = [
        ":pippenger_adapter",
        "//tachyon/math/elliptic_curves/bls/bls12_381:g1",
        "//tachyon/math/elliptic_curves/bn/bn254:g1",
        "//tachyon/math/elliptic_curves/msm/test:msm_test_set",
    ],
)

tachyon_cc_benchmark(
    name = "pippenger_adapter_benchmark",
    srcs = ["pippenger_adapter_benchmark.cc"],
    deps = [
        ":pippenger_adapter",
        "//tachyon/math/elliptic_curves/bn/bn254:g1",
        "//tachyon/math/elliptic_curves/msm/test:msm_test_set",
    ],
)

tachyon_cc_benchmark(
    name = "pippenger_benchmark",
    srcs = ["pippenger_benchmark.cc"],
    deps = [
        ":pippenger",
        "//tachyon/math/elliptic_curves/bn/bn254:g1",
        "//tachyon/math/elliptic_curves/msm/test:msm_test_set",
    ],
)
