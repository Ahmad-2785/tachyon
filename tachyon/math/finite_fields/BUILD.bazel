load(
    "//bazel:tachyon.bzl",
    "if_cuda_and_gmp_backend",
    "if_gmp_backend",
    "if_gpu_is_configured",
    "if_polygon_zkevm_backend",
)
load(
    "//bazel:tachyon_cc.bzl",
    "tachyon_cc_benchmark",
    "tachyon_cc_library",
    "tachyon_cc_test",
    "tachyon_cuda_test",
)

package(default_visibility = ["//visibility:public"])

tachyon_cc_library(
    name = "fp2",
    hdrs = ["fp2.h"],
    deps = [":quadratic_extension_field"],
)

tachyon_cc_library(
    name = "fp2_forward",
    hdrs = ["fp2_forward.h"],
)

tachyon_cc_library(
    name = "modulus",
    hdrs = ["modulus.h"],
    deps = ["//tachyon/math/base:big_int"],
)

tachyon_cc_library(
    name = "prime_field_base",
    hdrs = ["prime_field_base.h"],
    deps = [
        ":prime_field_traits",
        ":prime_field_util",
        "//tachyon/base:bits",
        "//tachyon/base/strings:string_number_conversions",
        "//tachyon/math/base:field",
        "//tachyon/math/base/gmp:gmp_util",
    ],
)

tachyon_cc_library(
    name = "prime_field_conversions",
    hdrs = ["prime_field_conversions.h"],
    deps = [
        ":prime_field",
        ":prime_field_gpu_debug",
    ] + if_gmp_backend([
        ":prime_field_gmp",
    ]) + if_gpu_is_configured([
        ":prime_field_gpu",
    ]),
)

tachyon_cc_library(
    name = "prime_field_gmp",
    hdrs = ["prime_field_gmp.h"],
    defines = ["TACHYON_GMP_BACKEND"],
    deps = [
        ":prime_field_base",
        "//tachyon/base:no_destructor",
        "//tachyon/base/strings:string_util",
        "//tachyon/math/base:field",
        "//tachyon/math/base:identities",
        "//tachyon/math/base/gmp:gmp_util",
    ],
)

tachyon_cc_library(
    name = "prime_field",
    hdrs = ["prime_field.h"],
    deps = [
        ":modulus",
        ":prime_field_base",
        ":prime_field_forward",
        "//tachyon/base:compiler_specific",
        "//tachyon/base/containers:adapters",
        "//tachyon/base/strings:string_util",
        "//tachyon/math/base:arithmetics",
        "//tachyon/math/base:identities",
        "//tachyon/math/base/gmp:gmp_util",
        "@com_google_googletest//:gtest_prod",
    ],
)

tachyon_cc_library(
    name = "prime_field_gpu",
    hdrs = ["prime_field_gpu.h"],
    deps = [
        ":prime_field",
        "//tachyon/math/finite_fields/kernels:carry_chain",
    ],
)

tachyon_cc_library(
    name = "prime_field_gpu_debug",
    hdrs = [
        "carry_chain.h",
        "prime_field_gpu_debug.h",
        "prime_field_ops_internal.h",
    ],
    deps = [":prime_field"],
)

tachyon_cc_library(
    name = "prime_field_forward",
    hdrs = ["prime_field_forward.h"],
)

tachyon_cc_library(
    name = "prime_field_traits",
    hdrs = ["prime_field_traits.h"],
    deps = [":prime_field_forward"],
)

tachyon_cc_library(
    name = "prime_field_util",
    srcs = ["prime_field_util.cc"],
    hdrs = ["prime_field_util.h"],
    deps = [
        "//tachyon:export",
        "@local_config_gmp//:gmp",
    ],
)

tachyon_cc_test(
    name = "finite_fields_unittests",
    size = "small",
    srcs = [
        "modulus_unittest.cc",
        "prime_field_base_unittest.cc",
        "prime_field_unittest.cc",
        "quadratic_extension_field_unittest.cc",
    ],
    deps = [
        "//tachyon/base:bits",
        "//tachyon/math/elliptic_curves/bn/bn254:fq",
        "//tachyon/math/elliptic_curves/bn/bn254:fr",
        "//tachyon/math/finite_fields/test:gf7",
        "//tachyon/math/finite_fields/test:gf7_2",
    ],
)

tachyon_cuda_test(
    name = "finite_fields_gpu_unittests",
    size = "small",
    srcs = if_gpu_is_configured(["prime_field_gpu_unittest.cc"]),
    deps = [
        ":prime_field_conversions",
        "//tachyon/device/gpu:gpu_memory",
        "//tachyon/math/finite_fields/kernels:prime_field_ops",
        "//tachyon/math/finite_fields/test:gf7_gpu",
        "//tachyon/math/test:launch_op_macros",
    ],
)

tachyon_cc_test(
    name = "finite_field_correctness_tests",
    size = "small",
    srcs = if_gmp_backend(["prime_field_correctness_test.cc"]),
    deps = [
        ":prime_field_conversions",
        "//tachyon/math/elliptic_curves/bn/bn254:fr",
    ] + if_polygon_zkevm_backend([
        "//tachyon/math/elliptic_curves/bn/bn254:fq",
        "//tachyon/math/elliptic_curves/secp/secp256k1:fq",
        "//tachyon/math/elliptic_curves/secp/secp256k1:fr",
    ]),
)

tachyon_cuda_test(
    name = "finite_field_correctness_gpu_tests",
    size = "small",
    srcs = if_cuda_and_gmp_backend(["prime_field_correctness_gpu_test.cc"]),
    deps = [
        ":prime_field_conversions",
        "//tachyon/device/gpu:gpu_memory",
        "//tachyon/math/elliptic_curves/bn/bn254:fq_gpu",
        "//tachyon/math/finite_fields/kernels:prime_field_ops",
        "//tachyon/math/test:launch_op_macros",
    ],
)

tachyon_cc_benchmark(
    name = "prime_field_benchmark",
    size = "small",
    srcs = ["prime_field_benchmark.cc"],
    deps = [
        "//tachyon/math/elliptic_curves/bn/bn254:fq",
        "//tachyon/math/elliptic_curves/bn/bn254:fr",
        "//tachyon/math/finite_fields/goldilocks_prime:goldilocks",
    ],
)

tachyon_cc_library(
    name = "quadratic_extension_field",
    hdrs = ["quadratic_extension_field.h"],
    deps = [
        ":quadratic_extension_field_traits",
        "//tachyon/math/base:field",
        "@com_google_absl//absl/strings",
    ],
)

tachyon_cc_library(
    name = "quadratic_extension_field_traits",
    hdrs = ["quadratic_extension_field_traits.h"],
    deps = [":fp2_forward"],
)
